<p class="info">
  <span class="info-item"><%= __('date') %>: <%- partial('date', {post: post}) %></span>
  <% if(post.date.valueOf() != post.updated.valueOf()){ %><span class="info-item"><%= __('updated') %>: <%- partial('updated', {post: post}) %></span><% } %>
  <% if(post.layout != 'page'){ %><span class="info-item"><%= __('category') %>: <%- partial('category', {post: post}) %></span><% } %>
</p>