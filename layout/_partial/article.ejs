<%
  var slug;
  if(post.hasOwnProperty('slug') && /\w+/.test(post.slug)){
    slug = post.slug;
  }
  else if(post.hasOwnProperty('date')){
    slug = post.date.unix();
  }
  else{
    slug = 'hexone';
  }
  var postId = post.layout + '-' + slug;

  if(typeof(parts) == 'undefined'){
    var parts = ['title', 'info', 'content', 'copyright', 'tag', 'navbar', 'comment'];
  }
%>
<article id="<%= postId %>" class="article">
  <% parts.forEach(function(part){ %>
    <%- partial('post/'+part, {post: post, postId: postId}) %>
  <% }); %>
</article>